<UserControl x:Class="sainim.WPF.Views.ContentBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sainim.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="783" d:DesignWidth="384">
    <Grid Background="LightGray">
        <ScrollViewer Padding="15 10">
            <StackPanel Orientation="Vertical">
                <Viewbox MaxHeight="70">
                    <Label Content="{DynamicResource StaticElements}" />
                </Viewbox>

                <ListBox ItemsSource="{Binding StaticElementThumbnails}" Name="StaticElementListBox" MinHeight="100" Padding="10 10" >
               
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Viewbox>
                                <Image Source="{Binding}" Width="{Binding ActualWidth, ElementName=StaticElementListBox}" Margin="0 10" />
                            </Viewbox>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                </ListBox>

                <Viewbox MaxHeight="70">
                    <Label Content="{DynamicResource AnimationFrames}" />
                </Viewbox>

                <ListBox ItemsSource="{Binding FrameThumbnails}" Name="FrameListBox" MinHeight="100" >

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Viewbox>
                                <Image Source="{Binding}" Width="{Binding ActualWidth, ElementName=FrameListBox}" Margin="0 10" />
                            </Viewbox>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
