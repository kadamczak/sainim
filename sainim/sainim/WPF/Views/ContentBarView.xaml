<UserControl x:Class="sainim.WPF.Views.ContentBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sainim.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="783" d:DesignWidth="384" >
    
    <Grid Background="LightGray"  >
        <ScrollViewer VerticalScrollBarVisibility="Visible" Padding="10" >

            <StackPanel Orientation="Vertical" >
                <Viewbox MaxHeight="70">
                    <Label Content="{DynamicResource StaticElements}" />
                </Viewbox>

                <ListBox MinHeight="100" ItemsSource="{Binding StaticElementThumbnails}" Name="StaticElementListBox" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Left" Width="{Binding ElementName=StaticElementListBox, Path=ActualWidth}" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>


                                <Image HorizontalAlignment="Left" Grid.Column="0" Source="{Binding Thumbnail}"  />
                                <Label HorizontalAlignment="Left" Grid.Column="1" Content="{Binding Label}" FontSize="16" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Viewbox MaxHeight="70">
                    <Label Content="{DynamicResource AnimationFrames}" />
                </Viewbox>

                <ListBox ItemsSource="{Binding FrameThumbnails}" Name="FrameListBox" MinHeight="100" >

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Left" Width="{Binding ElementName=FrameListBox, Path=ActualWidth}" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>


                                <Image HorizontalAlignment="Left" Grid.Column="0" Source="{Binding Thumbnail}"  />
                                <Label HorizontalAlignment="Left" Grid.Column="1" Content="{Binding Label}" FontSize="16"  />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
